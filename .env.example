# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Chat App — Environment Variables
#  Copy this file:  cp .env.example .env
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ── Django ───────────────────────────────────────
DJANGO_SECRET=change-me-to-a-real-secret-key
DEBUG=True
ALLOWED_HOSTS=*

# ── PostgreSQL ───────────────────────────────────
POSTGRES_DB=chatdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=chatpass123

# ── Default Superuser (created on first run) ─────
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com

# ── Ngrok (optional — leave empty for free tier) ─
# Get your token at: https://dashboard.ngrok.com
NGROK_AUTHTOKEN=
